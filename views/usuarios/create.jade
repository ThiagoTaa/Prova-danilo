extends ../layout

block content
    h1 Cadastro de Usu√°rios
    hr
    br
    if messages.erro
        div(class="alert alert-danger")
            each msg in messages.erro
                b= msg
                br
        br
    form(method="POST", action="/usuarios/create", role="form")
        div(class="form-group")
            label Nome
            input(type="text", class="form-control", name="nome",value="#{user.nome || ''}", placeholder="Nome", autofocus, required)
        div(class="form-group")
            label E-mail
            input(type="email",class="form-control", name="email", value="#{user.email || ''}",placeholder="joao123@mail.com", required)
        div(class="form-group")
            label Senha
            input(type="password", class="form-control", name="password",value="#{user.password || ''}", placeholder="Senha", required)
        div(class="form-group")
            label Confirmar Senha
            input(type="password", class="form-control", name="password_confirmar",value="#{user.password || ''}", placeholder="Confirmar Senha", required)
        br
        button(id="Cadastrar" name="Cadastrar" class="btn btn-success" type="Submit") Salvar
        span &nbsp;
        a(href="/usuarios" name="voltar" class="btn btn-primary") Voltar
                
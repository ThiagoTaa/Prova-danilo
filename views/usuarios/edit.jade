extends ../layout

block content
    h1 Atualizar Usu√°rio
    hr
    br
    if messages.erro
        div(class="alert alert-danger")
            each msg in messages.erro
                b= msg
                br
        br
    form(method="POST", action="/usuarios/edit/#{dados._id}", role="form")
        div(class="form-group")
            label Nome
            input(type="text", class="form-control", name="nome", placeholder="Nome", value="#{dados.nome}", autofocus, required)
        div(class="form-group")
            label E-mail
            input(type="email",class="form-control", name="email",value="#{dados.email}", disabled)
        br
        button(id="Cadastrar" name="Cadastrar" class="btn btn-success" type="Submit") Salvar
        span &nbsp;
        a(href="/usuarios" name="voltar" class="btn btn-primary") Voltar
                